{
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "configureZshAsDefaultShell": true
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "eamodio.gitlens",
        "mhutchie.git-graph",
        "github.vscode-pull-request-github",
        "alefragnani.bookmarks",
        "aaron-bond.better-comments",
        "github.copilot",
        "github.copilot-chat"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh"
      }
    }
  },

  "mounts": [
    "source=${localEnv:HOME}/.claude,target=/root/.claude,type=bind,consistency=cached"
  ],

  "initializeCommand": "mkdir -p ${HOME}/.claude",

  "remoteEnv": {
    "ANTHROPIC_API_KEY": "${localEnv:ANTHROPIC_API_KEY}",
    "ANTHROPIC_BASE_URL": "${localEnv:ANTHROPIC_BASE_URL}",
    "OPENAI_API_KEY": "${localEnv:OPENAI_API_KEY}",
    "OPENAI_BASE_URL": "${localEnv:OPENAI_BASE_URL}",
    "R2_ENDPOINT": "${localEnv:R2_ENDPOINT}",
    "R2_ACCESS_KEY_ID": "${localEnv:R2_ACCESS_KEY_ID}",
    "R2_SECRET_ACCESS_KEY": "${localEnv:R2_SECRET_ACCESS_KEY}",
    "R2_BUCKET": "${localEnv:R2_BUCKET}"
  },

  "shutdownAction": "stopContainer",

  "remoteUser": "root"
}
